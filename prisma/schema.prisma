generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AirstrikePost {
  id Int @id @default(autoincrement())
  authorId Int
  map String
  agent String
  title String
  comment String
  placename String
  posture String
  charge String?
  bounce String?
  throwing String?
  standingPositionImage String
  landmarkImage String
  firingPinX Float?
  firingPinY Float?
  fallingPinX Float?
  fallingPinY Float?
  favorite Int @default(0)
  createdAt DateTime @default(now())
  author User @relation(fields: [authorId], references: [userId])
  favManager AirstrikeFavoriteManager[]
}

model User {
  userId Int @id @default(autoincrement())
  username String
  userEmail String @unique
  posrts AirstrikePost[]
  airstrikeFavmanager AirstrikeFavoriteManager[]
}

model AirstrikeFavoriteManager {
  @@id([userId, postId]) //複合キー
  userId Int
  postId Int
  user User @relation(fields: [userId], references: [userId])
  post AirstrikePost @relation(fields: [postId], references: [id])
  
}